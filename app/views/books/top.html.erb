<div class="container">
  <div class="header-wrap">
      <div class="header-top">
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to "投稿", new_book_path %>
            <li><%= link_to "マイページ", user_path(current_user.id) %>
          <% else %>
            <li><%= link_to "新規登録/ログイン", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
      <div class="search-header">
        <p>検索機能</p>
      </div>
  </div>
  
  <div class="main-wrap">
    <div class="main-contents">
      <div>
        ジャンルから探す
      </div>
      <div>
        新着の投稿
        <% @new_books.map do |new_book| %>
          <ul>
            <li><%= link_to new_book.title, book_path(new_book.id) %></li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="right-side">
      <div>
        人気の投稿
      </div>
    </div>
  </div>
</div>