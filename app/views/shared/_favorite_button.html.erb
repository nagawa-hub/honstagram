<% if @book.favorite?(current_user) %>
  <%# お気に入り中 %>
  <%= form_with model: @book, url: book_favorite_path(@book), method: :delete, class:"favorite-form", local: true do |f| %>
    <%= hidden_field_tag :book_id %>
    <span class="favorite-icon"><i class="fas fa-heart"></i></span>
    <%= f.submit "お気に入り", class:"favorite-btn" %>
  <% end %>
<% else %>
  <%# 未お気に入り %>
  <%= form_with model: @book, url: book_favorites_path(@book), method: :post, class:"favorite-form", local: true do |f| %>
    <%= hidden_field_tag :book_id %>
    <span class="favorite-icon"><i class="far fa-heart"></i></span>
    <%= f.submit "お気に入り", class:"unfavorite-btn" %>
  <% end %>
<% end %>

